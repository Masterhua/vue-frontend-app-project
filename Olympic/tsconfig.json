{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "preserve", 
    "strict": true,
    "baseUrl": "src", // 使得基路径为 src
    "paths": {
      "@components/*": ["components/*"], // 使得路径别名 @components 适用于 src/components 目录
      "@/*": ["*"] // 允许使用 @/ 来访问 src 目录下的文件
    },
    "types": [
      "node",
      "vue"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue" 
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
